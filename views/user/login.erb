<%= erb :header %>
<div class="row">
  <div class="mb-3 col-lg-5 col-md-12">
  <p>Login</p>
  <hr>
  <% # show an error if there is one present %>
  <%= display_error(@error) if @error %>
  <form id="login" method="post" action="/login">
    <div class="form-group">
      <label for="username" class="sr-only">Username</label>
      <input type="text" name="username" id="username" class="form-control" placeholder="Username" required="required" autofocus="autofocus">
    </div>
    <div class="form-group">
      <label for="password" class="sr-only">Password</label>
      <input type="password" name="password" id="password" class="form-control" placeholder="Password" required="required">
    </div>
    <a href="/reset-password"><p>Forgotten your password?</p></a>
    <button class="btn btn-primary" type="submit">Login</button>
    <a class="btn btn-info" href="/auth/twitter">Login with Twitter</a>
  </form>
</div>
</div>
<%= erb :footer %>