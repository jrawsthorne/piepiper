<%= erb :header %>
<div class="row">
  <div class="mb-3 col-lg-5 col-md-12">
  <p>Reset password</p>
  <hr>
  <% # show an error if there is one present %>
  <%= display_error(@error) if @error %>
  <form id="reset" method="post" action="/reset-password">
    <div class="form-group">
      <label for="username" class="sr-only">Email</label>
      <input type="email" name="email" id="email" class="form-control" placeholder="Email" required="required" autofocus="autofocus">
    </div>
    <button class="btn btn-primary" type="submit">Email link</button>
  </form>
</div>
</div>
<%= erb :footer %>