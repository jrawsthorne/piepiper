<%= erb :header %>
<% tweets = $client.mentions_timeline() %>
<div class="row">
  <div class="mb-3 col-md-6">
    <p>Incoming tweets</p>
    <ul class="list-group">
      <%  
        tweets.each do |tweet|
        if(!isorder(tweet.id))
      %>
      
        <li class='list-group-item'>
          <div class="d-flex w-100">
            <div class="profile-image mr-3">
              <img class="rounded-circle" src="<%= tweet.user.profile_image_url %>" />
            </div>
            <div class="profile">
              <h5 class="mb-1"><%= tweet.user.screen_name %> <span><%= tweet.created_at.asctime %></span></h5>
              <p class="mb-1"><%= tweet.text %></p>
              <p class="mb-1"><a class="text-secondary" href="/new-order/<%=tweet.id%>">Create order from tweet</a></p>
            </div>
          </div>
        </li>
      
      <% 
        end
        end
      %>
      </ul>
    </div>
  <div class=" col-md-6">
    <p>Orders</p>
    <div id="accordion">
    <% 
      get_order_ids.each do |order_id|
      order = get_order(order_id)
      tweet = order.tweet
    %>
    <div class="card mb-3">
      <div class="card-header">
        <img width="30px" class="rounded-circle mr-2" src="<%= tweet.user.profile_image_url %>" />
        #<%=order_id%> 
        <%= tweet.user.screen_name %>
        <span class="badge badge-info"><%= order.state %></span>
        <button class="btn btn-link text-secondary" data-toggle="collapse" data-target="#order-details-<%= order_id %>">
          View order details
        </button>
        
      </div>
      <div id="order-details-<%=order_id%>" class="collapse">
        <ul class="list-group list-group-flush">
          <% order.items.each do |item| %>
            <li class="list-group-item"><%= item.name %></li>
          <% end %>
        </ul>
        <div class="card-footer border-top-0">
          <a class="btn btn-primary" href="/edit-order/<%=order_id%>">Edit order</a>
          <a class="btn btn-danger" href="/delete-order/<%=order_id%>">Delete order</a>
        </div>
    </div>
    </div>
    <% 
      end
    %>
  </div>
</div>
</div>
<%= erb :footer %>
