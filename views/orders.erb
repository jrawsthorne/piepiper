<%= erb :header %>
<% tweets = @client.mentions_timeline() %>
<div class="row">
  <div class="mb-3 col-md-6">
    <p>Incoming tweets</p>
    <ul class="list-group">
      <%  
          tweets.each do |tweet|
      %>
      
        <li class='list-group-item'>
          <div class="d-flex w-100">
            <div class="profile-image mr-3">
              <img class="rounded-circle" src="<%= tweet.user.profile_image_url %>" />
            </div>
            <div class="profile">
              <h5 class="mb-1"><%= tweet.user.screen_name %> <span><%= tweet.created_at.asctime %></span></h5>
              <p class="mb-1"><%= tweet.text %></p>
              <p class="mb-1"><a class="text-secondary" href="/new-order/<%=tweet.id%>">Create order from tweet</a></p>
            </div>
          </div>
        </li>
      
      <% 
          end
      %>
      </ul>
    </div>
  <div class=" col-md-6">
    <p>Orders</p>
    <div id="accordion">
    <% tweets.each do |tweet| %>
    <div class="card mb-3">
      <div class="card-header">
        <img width="30px" class="rounded-circle mr-2" src="<%= tweet.user.profile_image_url %>" />
        <%= tweet.user.screen_name %>
        <button class="btn btn-link text-secondary" data-toggle="collapse" data-target="#order-details-<%=tweet.id%>">
          View order details
        </button>
        <span class="badge badge-success">Complete</span>
      </div>
      <div id="order-details-<%=tweet.id%>" class="collapse">
        <ul class="list-group list-group-flush">
          <li class="list-group-item">1x Pork pie</li>
          <li class="list-group-item">2x Mash</li>
        </ul>
        <div class="card-footer border-top-0">
          <a class="btn btn-primary" href="/edit-order/<%=tweet.id%>">Edit order</a>
        </div>
    </div>
    </div>
    <% end %>
  </div>
</div>
</div>
<%= erb :footer %>
