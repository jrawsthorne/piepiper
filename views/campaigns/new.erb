<%= erb :header %>
<p>New Marketing Campaign</p>
<hr>
<div class="row">
  <div class="mb-3 col-lg-5 col-md-12">
    <form method="post" action="/campaigns/new">
      <form class="campaignform">
        <div class="form-group">
          <label for="prize">Select a prize</label>
          <select required style="height:45px" class="form-control" name="reward" id="reward_id">
            <% @campaign_types.each do |campaign_type| %>
              <option for="<%=campaign_type.id%>" value="<%=campaign_type.id%>"><%=campaign_type.type_name%></option>
            <% end %>
          </select>
        </div>
        <div class="form-group">
          <label for="winner_number">Retweet number, 0 is random</label>
          <input name="winner_number" placeholder="0" class="form-control" type="number" min="0" value="0" required>
        </div>
        <div class="form-group">
          <label for="message">Message</label>
          <textarea required class="form-control" name="message" rows="3" placeholder="First person to retweet wins a 10% discount!"></textarea>
        </div>
        <button class="btn btn-primary" role="button" type="submit">Create</button>    
      </form>
  </div>
</div>
<%= erb :footer %>