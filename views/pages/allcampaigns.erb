<%= erb :header %>
<% campaigns = Campaign.all %>
<p>Campaigns</p>
<% # show error if there are no campaign in the database %>
<% if(!Campaign.exists?) %>
<p>Sorry, no campaigns exist</p>
<% else %>
    <div class="table-responsive mb-3">
      <table class="table">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Campaign Type</th>
          <th scope="col">Tweet</th>
          <th scope="col">Winner</th>
        </tr>
      </thead>
      <tbody>
        <% # iterate through all the users and display their details %>
        <% users.each do |campaign| %>
        <tr>
          <th scope="row"><a href="/pages/<%= campaign.id %>"><%= campaign.id %></a></th>
          <td><%= campaign.campaign_type %></td>
          <td><%= campaign.username %></td>
          <% twitter_user = user.get_twitter_user %>
          <% # display their twitter screen name if the user has a twitter id associated with them %>
          <td><a target="_blank" href="<%= twitter_user.uri if twitter_user%>"><%= twitter_user.screen_name if twitter_user %></a></td>
        </tr>
        <% end %>
      </tbody>
      </table>
    </div>
<% end %>
<%= erb :footer %>
