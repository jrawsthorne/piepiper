<%= erb :header %>
<form class="form-signin" method="post" action="/campaigns/new">
<h1>Items</h1>
  <form>
    <div class="form-group mb-3">
      <div class="form-row">
        <h5 for="itemname">Name</h5>
        <input type="name" class="form-control" id="itemname" placeholder="Enter name">
        <h5 for="Price">Price</h5>
        <input type="price" class="form-control" id="price" placeholder="Price">
      </div>
    </div>

    <div class="form-group mb-3">
      <h5 for="Type">Type</h5>
      <div class="form-row">
        <div class="form-check">
          <input type="checkbox" class="form-check-input">
          <label  for="Pies">Pies</label>
        </div>
        <div class="form-check">
          <input type="checkbox" class="form-check-input">
          <label  for="Sides">Sides</label>
        </div>
        <div class="form-check">
          <input type="checkbox" class="form-check-input">
          <label  for="Soft Drinks">Soft Drink</label>
        </div>
        <div class="form-check">
          <input type="checkbox" class="form-check-input">
          <label  for="Milkshakes">Milkshakes</label>
        </div>
        <div class="form-check">
          <input type="checkbox" class="form-check-input">
          <label  for="Alcohol">Alcohol</label>
        </div>
      </div>
    </div>

    <div class="form-group mb-3">
      <h5 for="Type">Special Conditions</h5>
      <div class="form-row">
        <div class="form-check">
        <input type="checkbox" class="form-check-input">
        <label  for="Vegan">Vegan</label>
        </div>
        <div class="form-check">
          <input type="checkbox" class="form-check-input">
          <label  for="Vegetarian">Vegetarian</label>
        </div>
        <div class="form-check">
          <input type="checkbox" class="form-check-input">
          <label  for="Non-vegetarian">Non-vegetarian</label>
        </div>
      </div>
    </div>

    <div class="form-group mb-3">
      <h5  for="Type">Location</h5>
      <div div class="form-row">
        <div class="form-check">
          <input type="checkbox" class="form-check-input">
          <label  for="Sheffield">Sheffield</label>
        </div>
        <div class="form-check">
          <input type="checkbox" class="form-check-input">
          <label  for="Leeds">Leeds</label>
        </div>
      </div>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>

  </form>

<%= erb :footer %>
